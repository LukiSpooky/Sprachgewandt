<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionenActivity">

    <TextView
        android:id="@+id/optTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optionen"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.169" />

    <TextView
        android:id="@+id/opttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hintergrundfarbe: "
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.417" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="47dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/home" />

    <ImageView
        android:id="@+id/blau"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/grau"
        app:srcCompat="@drawable/blau"
        tools:layout_editor_absoluteY="348dp" />

    <ImageView
        android:id="@+id/gelb"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blau"
        app:srcCompat="@drawable/gelb"
        tools:layout_editor_absoluteY="348dp" />

    <ImageView
        android:id="@+id/grau"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/grau"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="348dp" />

    <ImageView
        android:id="@+id/weiss"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toStartOf="@+id/grau"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/weiss"
        tools:layout_editor_absoluteY="348dp" />

</androidx.constraintlayout.widget.ConstraintLayout>